
@{
    ViewBag.Title = "LoginCustumer";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="account-pages mt-5 mb-5" ng-controller="LoginCustumerCtrl">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <a href="/AccountCustumer/LoginHome">
                                <span><img src="~/Assets/account/images/LoGo_DoGia.png" alt="" style="width: 100%"></span>
                            </a>
                            <p class="text-muted mb-4 mt-3">Nhập tài khoản và mật khẩu của bạn để truy cập trang khách hàng.</p>
                        </div>
                        <h5 class="auth-title">Đăng nhập</h5>
                        <form action="" method="post">
                            <div class="form-group mb-3">
                                <label for="emailaddress">Tài khoản</label>
                                <input class="form-control" type="text" id="UserName" placeholder="Nhập tài khoản">
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Mật khẩu</label>
                                <input class="form-control" type="password" id="Pass" placeholder="Nhập mật khẩu">
                            </div>
                            <div class="form-group mb-3">
                                <div class="custom-control custom-checkbox checkbox-info">
                                    <input type="checkbox" class="custom-control-input" id="checkbox-signin">
                                    <label class="custom-control-label" for="checkbox-signin">Nhớ</label>
                                </div>
                            </div>
                            <div class="form-group mb-0 text-center">
                                <button class="btn btn-danger btn-block" type="submit" ng-click="LoginCustumer()"> Đăng nhập </button>
                            </div>
                        </form>
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p> <a href="" class="text-muted ml-1">Quên mật khẩu?</a></p>
                        <p class="text-muted">Chưa có tài khoản? <a href="/Account/Register" class="text-muted ml-1"><b class="font-weight-semibold">Đăng ký</b></a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
@section scripts{
    <script src="~/AngulaJS/CrudService.js"></script>
    <script src="~/AngulaJS/Login.js"></script>
}

