
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<div class="row">
    <!-- page wapper-->
    <div class="columns-container">
        <div class="container" id="columns">
            <!-- page heading-->
            <h2 class="page-heading">
                <span class="page-heading-title">Giỏ hàng</span>
            </h2>
            <!-- ../page heading-->
            <div class="page-content page-order">

                <div class="heading-counter warning">
                    <span class="fa fa-shopping-cart"></span> Giỏ hàng của bạn chứa:
                    <span id="count-cart" style="font-weight: bold">1</span> <span> Sản phẩm</span>
                </div>
                <div class="order-detail-content">
                    <table class="table table-bordered table-responsive cart_summary">
                        <thead>
                            <tr>
                                <th class="cart_product">Sản phẩm</th>
                                <th>Mô tả</th>
                                <th>Trạng thái</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Tổng cộng</th>
                                <th class="action"><i class="fa fa-trash-o"></i></th>
                            </tr>
                        </thead>
                        <tbody id="show-item-cart">
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" rowspan="1"></td>
                                <td colspan="3"><strong>Tổng cộng(bao gồm thuế)</strong></td>
                                <td colspan="1" id="total_price" style="font-weight: bold; color: #e84d1c; font-size: 20px;">54,000</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="cart_navigation">
                        <a class="prev-btn" href="/SanPhamCustumer/SanPham">Tiếp tục mua sắm</a>
                        <a class="next-btn" href="/GioHang/ThanhToan">Tiến hành kiểm tra</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
